<% if(session.user!=undefined || session.user!=null){ %>
    <div class="user">
        <div>Logat ca <%= session.name%></div>
        <a href="/deconectare">Deconectare</a> 
    </div>
    <%if(bilet.length){%>
        <div class="movie-wrapper">
        <% for(let i=0;i<bilet.length;++i){ %>
            <div class="movie-item bilet-item">
                <div><span>First name: </span><%-bilet[i].first_name%></div>
                <div><span>Last name: </span><%-bilet[i].last_name%></div>
                <div><span>Movie: </span><%-bilet[i].name%></div>
                <div><span>Date: </span><%-bilet[i].date_movie%></div>
                <div><span>Place: </span><%-bilet[i].place%></div>
                <input type="button" value="Anulează" style="background-color:red"
                    onclick="window.location.href=<%-`'/delete?id_m=${bilet[i].id_movie}&id_u=${session.id_user}&pl=${bilet[i].place}'`%>">
            </div>
        <% } %>
        </div>
    <%}else{%>
        <div class="result">
            <div style="color:red">Nu aveți nici un bilet procurat</div>
        </div>
    <%}%>

<% }else{ %>
    <div class="user">
        <div class="welcome">Bine ați venit!</div>
        <a href="/autentificare">Autentificare</a><br>
    </div>
<% } %>